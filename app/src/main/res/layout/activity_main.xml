<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yy.androidgeneralmodule.MainActivity">

    <Button
        android:id="@+id/btnInstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="静默安装APK"
        android:onClick="silentInstall"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShutdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关机"
        android:onClick="shutdown"
        app:layout_constraintTop_toBottomOf="@id/btnInstall" />

    <Button
        android:id="@+id/btnUi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI基类(超类)"
        android:onClick="baseUi"
        app:layout_constraintTop_toBottomOf="@id/btnShutdown" />

</android.support.constraint.ConstraintLayout>
